1) num = int(input("Digite um numero: "))
print(f'o antecessor desse numero é {num-1} e seu sucessor é {num+1}') 

2) num = int(input("Digite um numero: "))
num2 = int(input("Digite outro numero: "))
print(f"a soma desses numeros é {num + num2}, a subtração é {num - num2}, a multiplicação é {num * num2} e a divisão é {num/num2}")

3) num = int(input("Digite um numero: "))
num2 = int(input("Digite outro numero: "))
if num > num2:
   print(True)
else:
   print(False)

4) tempC = float(input("Digite uma temperatura em celcius: "))
tempF = (tempC * 9)/5 + 32
print("A temperatura em Fahrenheit é: " ,tempF)
